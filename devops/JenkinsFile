pipeline
{

    agent any
 environment {

 PATH = "C:\\Program Files\\Git\\usr\\bin;C:\\Program Files\\Git\\bin nohup.exe"
    stages
    {
            stage('Construir')
            {
                steps
                {
                    echo 'Construindo...'
                    sh 'mvn clean'
                }
            }

            stage('Teste')
            {
                steps
                {
                    echo 'Testando..'
                }
            }


            stage('Implantar')
            {
                steps
                {
                    echo 'Implantando....'
                    sh 'mvn install -X'
                }
            }
    }
}
}
